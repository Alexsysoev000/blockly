<?xml version="1.0" encoding="utf-8" ?>
<toolbox>
	<parametre id="defaultCategories">CAT_OTTO,CAT_LOGIC,CAT_MATH,CAT_ARDUINO,CAT_ARDUINO_TIME,CAT_servo,CAT_ultrason,CAT_DFPLAYER</parametre>
    <category name="CAT_ARDUINO" colour="#2d2d64">
		<block type="base_begin"></block>
		<block type="base_end"></block>
		<block type="base_loop"></block>
	</category>
	<category name="CAT_OTTO" colour="#32D900">
		<block type="otto9_home"></block>
		<block type="otto9_calibration"></block>
		<block type="otto9_eeprom"></block>
		<block type="otto9_move"></block>
		<block type="otto9_dance"></block>
		<block type="otto9_do"></block>
		<block type="otto9_sound"></block>
		<block type="otto9_gesture"></block>
		<block type="otto9_smooth"></block>
	</category>
	<category name="CAT_ARDUINO_TIME" colour="#00929f">
			<block type="base_delay">
					<value name="DELAY_TIME">
				<shadow type="math_number">
					<field name="NUM">1</field>
				</shadow>
			</value></block>
	</category>
	<category name="CAT_LOGIC" colour="#ffb400">
		<block type="controls_if"></block>
		<block type="controls_repeat_ext">
		<value name="TIMES">
				<shadow type="math_number">
					<field name="NUM">2</field>
				</shadow>
			</value>
		</block>
	</category>
    <category name="CAT_MATH" colour="#008000">
        <block type="math_number"></block>
		<block type="inout_angle_maths"></block>
        <block type="logic_compare">
				<value name="B">
				<shadow type="math_number">
					<field name="NUM">10</field>
				</shadow>
			</value>
			</block>
    </category>
	<category name="CAT_ultrason" colour="#2a93e8">
			<block type="otto9_obstacle"></block>
			<block type="otto9_getdistance"></block>
	</category>
	<category name="CAT_servo" colour="#2d2dd1">	
			<block type="servo_move">
				<value name="DEGREE">
				<shadow type="inout_angle_maths">
					<field name="NUM">90</field>
				</shadow>
			</value>
			<value name="PIN">
				<shadow type="math_number">
					<field name="NUM">2</field>
				</shadow>
			</value>
		</block>
	</category>
	<category name="CAT_DFPLAYER" colour="#a600d3">
			<block type="play"></block>
	</category>	
</toolbox>